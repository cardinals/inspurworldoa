@model InspurOA.Models.IndexViewModel
@{
    ViewBag.Title = "个人信息";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>修改个人账户设置</h4>
    <hr />
    <div class="form-horizontal div-md">
        <div class="form-group">
            <div class="col-md-3">
                @Html.Label("", "密码:")
            </div>
            <div class="col-md-9">
                [
                @if (Model.HasPassword)
            {
                    @Html.ActionLink("修改密码", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("创建密码", "SetPassword")
                }
                ]
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.Label("", "电话号码:")
            </div>
            <div class="col-md-9">
                @(Model.PhoneNumber ?? "无")
                @if (Model.PhoneNumber != null)
            {
                    <br />
                    <text>[&nbsp;&nbsp;@Html.ActionLink("修改电话号码", "AddPhoneNumber")&nbsp;&nbsp;]</text>
                    using (Html.BeginForm("RemovePhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <text>[<input type="submit" value="移除电话号码" class="btn-link" />]</text>
                    }
                }
                else
                {
                    <text>[&nbsp;&nbsp;@Html.ActionLink("添加电话号码", "AddPhoneNumber")&nbsp;&nbsp;]</text>
                }
            </div>
        </div>

    </div>


