@model InspurOA.Models.PermissionViewModel

@{
    ViewBag.Title = "修改权限";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("返回列表", "Index", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PermissionId)
        <div class="form-group">
            @Html.LabelFor(model => model.PermissionCode, htmlAttributes: new { @class = "control-label col-md-2" })
            @*<label class="control-label col-md-2" for="PermissionDescription">权限描述</label>*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.PermissionCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PermissionCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PermissionDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            @*<label class="control-label col-md-2" for="PermissionDescription">权限描述</label>*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.PermissionDescription, new { htmlAttributes = new { @class = "form-control", @style = "max-width:100%;" } })
                @Html.ValidationMessageFor(model => model.PermissionDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default form-control" />
            </div>
        </div>
    </div>
}

