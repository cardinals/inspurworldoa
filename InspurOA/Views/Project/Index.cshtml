@model IEnumerable<InspurOA.Models.ProjectModel>

@{
    ViewBag.Title = "项目列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("添加", "Create", null, new { @class = "btn btn-primary" }) |
    <input class="btn btn-primary" name="BtnDelete" type="button" value="删除" />
</p>
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <tr class="success">
            <th>
                <input type="checkbox" name="CheckAll" />
            </th>
            <th>
                项目名称
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="ID" value="@Html.DisplayFor(modelItem => item.Id)" />
                </td>
                <td data-type="content">
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
            </tr>
        }

    </table>
    @Html.Partial("PagInation")
</div>
<style type="text/css">
    tr {
        cursor: pointer;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("td[data-type='content']").click(function () {
            var itemId = $("input[name='ID']", $(this).parent("tr")).val();
            window.location.href = "Project/Edit?id=" + itemId;
        });

        $("input[name='BtnDelete']").click(function () {
            var checkedList = $("input[name='ID']");
            var selectedIds = [];
            for (var i = 0; i < checkedList.length; i++) {
                if (checkedList[i].checked) {
                    selectedIds.push(checkedList[i].value);
                }
            }

            if (selectedIds.length > 0) {
                if (confirm("确认删除?")) {
                    $.ajax({
                        type: "post",
                        url: "../Project/Delete",
                        data: { 'ids': selectedIds },
                        dataType: "json",
                        success: function (result) {
                            location.reload();
                        },
                        error: function (ex) {
                            location.reload();
                            //alert(ex.responseText);
                        }
                    });
                }
            }
            else {
                alert("请选择要删除的列表项！");
            }
        });
    });
</script>

