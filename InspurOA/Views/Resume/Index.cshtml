    ViewBag.Title = "简历管理";
}

<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
<style type="text/css">
    th {
        text-align: center;
        border: 2px solid;
    }

    td {
        padding: 1px;
        border-left: 1px dashed;
        border-right: 1px dashed;
        border-top: 2px solid;
        border-bottom: 2px solid;
        font-size: 12px;
        height: 30px;
        cursor: pointer;
