@using InspurOA.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - InspurWorld</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <link href="~/Content/_Layout.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                @*@Html.ActionLink("Inspur World", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="../../Home/Index" class="navbar-brand"><b>Inspur World</b></a>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            简历管理
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("简历管理", "Index", "Resume")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("项目管理", "Index", "Project")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("简历统计", "Index", "Statistics")</li>
                            @*<li class="divider"></li>
                                <li>@Html.ActionLink("岗位名称维护", "Index", "")</li>*@
                        </ul>
                    </li>
                    @*<li>@Html.ActionLink("简历共享", "Index", "Home")</li>*@

                    @if (AuthHelper.IsAuthorizedByRole(User.Identity.Name, "Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                系统管理
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("用户管理", "Index", "User")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("角色管理", "Index", "Role")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("权限管理", "Index", "Permission")</li>
                            </ul>
                        </li>
                    }

                    @*@Html.ActionLink("About", "About", "Home",null,new { @class= "navbar-brand" })*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container PageContainer body-content">
        @RenderBody()
    </div>
    <footer>
        <div>
            <p>&copy; @DateTime.Now.Year - 浪潮世科简历信息管理系统</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
